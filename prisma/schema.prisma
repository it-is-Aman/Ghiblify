generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(uuid())
  userID  String @unique
  credits Int    @default(2) // Default 2 credits for new users
}
